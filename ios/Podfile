# ios/Podfile

platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Target definition
target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Flutter Pod helper path (Flutter 3.x+)
  require File.join(File.dirname(__FILE__), '../Flutter/Flutter.framework/flutter_tools/bin/podhelper')

  # Install all Flutter iOS pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Post-install hook to ensure proper build settings
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
